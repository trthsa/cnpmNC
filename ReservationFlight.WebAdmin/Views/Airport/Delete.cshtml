@model ReservationFlight.Model.Catalog.Airports.AirportDeleteRequest

@{
    ViewData["Title"] = "Xóa sân bay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Xóa sân bay</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a style="color: #0779e4;" href="/">Trang chủ</a></li>
        <li class="breadcrumb-item active">Xóa sân bay</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index" asp-controller="Airport">Về danh sách</a>
        </div>

        <div class="card-body">
            <div class="col-md-12">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.IATA)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IATA)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input asp-for="IATA" type="hidden" />
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>