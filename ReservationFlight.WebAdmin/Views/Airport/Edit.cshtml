@using System.Collections
@model ReservationFlight.Model.Catalog.Airports.AirportUpdateRequest

@{
    ViewData["Title"] = "Cập nhật sân bay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .validation-summary-valid span {
        display: none;
    }
</style>

<div class="container-fluid">
    <h1 class="mt-4">Cập nhật sân bay</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a style="color: #0779e4;" href="/">Trang chủ</a></li>
        <li class="breadcrumb-item active">Cập nhật sân bay</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index" asp-controller="Airport">Về danh sách</a>
        </div>

        <div class="card-body">
            <div class="col-md-8">
                <form asp-action="Edit" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="IATA" type="hidden" name="Id" value="@Model.IATA" />
                    <div class="form-group">
                        <label asp-for="IATA" class="control-label"></label>
                        <input asp-for="IATA" class="form-control" />
                        <span asp-validation-for="IATA" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Status" class="control-label"></label>
                        <select asp-for="Status" class="form-control form-control-md">
                            @foreach (DictionaryEntry item in ViewBag.StatusList)
                            {
                                <option value="@item.Value">@item.Key</option>
                            }
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Cập nhật" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>